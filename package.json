{
  "name": "shared-shopping-list",
  "version": "1.0.0",
  "description": "Simple shared shopping list with Cloudflare Workers + KV",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:pages": "wrangler pages deploy public --project-name=grocery-shopping-list --branch=main",
    "deploy:all": "npm run deploy && npm run deploy:pages",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "jsdom": "^27.0.1",
    "vitest": "^4.0.3",
    "wrangler": "^3.78.0"
  }
}
